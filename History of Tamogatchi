  <div class="toast" id="toast" role="status" aria-live="polite">
    <span class="mini-heart" aria-hidden="true"></span>
    <span id="toastText">Snack delivered!</span>
  </div>

  <script>
    // Smooth jump nav
    document.querySelectorAll("[data-jump]").forEach(btn => {
      btn.addEventListener("click", () => {
        const target = document.querySelector(btn.dataset.jump);
        if (target) target.scrollIntoView({ behavior: "smooth", block: "start" });
      });
    });

    // Timeline -> screen
    const events = Array.from(document.querySelectorAll(".event"));
    const screenTitle = document.getElementById("screenTitle");
    const screenText  = document.getElementById("screenText");
    const modeLabel   = document.getElementById("modeLabel");

    function selectEvent(idx){
      events.forEach((e,i) => e.setAttribute("aria-selected", i === idx ? "true" : "false"));
      const e = events[idx];
      screenTitle.textContent = e.dataset.title;
      screenText.textContent  = e.dataset.text;
      currentEventIndex = idx;
      pingToast("Loaded: " + e.querySelector(".headline").textContent);
    }

    events.forEach((e,i) => {
      e.addEventListener("click", () => selectEvent(i));
      e.addEventListener("keydown", (ev) => {
        if(ev.key === "Enter" || ev.key === " "){
          ev.preventDefault();
          selectEvent(i);
        }
      });
    });

    // Buttons A/B/C behaviors
    const btnA = document.getElementById("btnA");
    const btnB = document.getElementById("btnB");
    const btnC = document.getElementById("btnC");

    const modes = [
      {
        name:"HISTORY",
        title:"1996: The egg arrives ü•ö",
        text:"Bandai launches the original Tamagotchi in Japan, turning daily ‚Äúcare‚Äù into a simple, addictive routine‚Äîfeed, clean, play, and try not to miss the beeps."
      },
      {
        name:"TRIVIA",
        title:"Tiny tech, big impact ü§è‚ú®",
        text:"Tamagotchi popularized quick check-ins and routine-based play‚Äîideas you now see in daily tasks, streaks, and cozy games."
      },
      {
        name:"VIBES",
        title:"Retro-cute forever üíñ",
        text:"The shell design, beeps, and character evolutions created a comforting loop: tiny responsibility, tiny reward, huge charm."
      }
    ];
    let modeIndex = 0;
    let currentEventIndex = 0;

    function setMode(i){
      modeIndex = (i + modes.length) % modes.length;
      const m = modes[modeIndex];
      modeLabel.textContent = m.name;

      // If on HISTORY, show the selected timeline entry.
      if(m.name === "HISTORY"){
        selectEvent(currentEventIndex);
      } else {
        screenTitle.textContent = m.title;
        screenText.textContent  = m.text;
        pingToast("Mode: " + m.name);
      }
    }

    // Confetti snack
    function confettiBurst(){
      const screen = document.querySelector(".screen");
      const burstCount = 18;
      for(let i=0;i<burstCount;i++){
        const p = document.createElement("div");
        p.style.position = "absolute";
        p.style.left = (20 + Math.random()*60) + "%";
        p.style.top  = (45 + Math.random()*35) + "%";
        p.style.width = (6 + Math.random()*10) + "px";
        p.style.height= (6 + Math.random()*10) + "px";
        p.style.borderRadius = (Math.random()>.6 ? "999px" : "3px");
        p.style.background = ["rgba(255,79,163,.75)","rgba(91,213,255,.75)","rgba(155,255,122,.75)","rgba(255,255,255,.7)"][Math.floor(Math.random()*4)];
        p.style.transform = `rotate(${Math.random()*180}deg)`;
        p.style.opacity = "0.95";
        p.style.pointerEvents = "none";
        p.style.zIndex = "5";
        p.style.filter = "drop-shadow(0 10px 10px rgba(0,0,0,.10))";
        screen.appendChild(p);

        const dx = (Math.random() - 0.5) * 220;
        const dy = (-80 - Math.random()*160);
        const rot= (Math.random() - 0.5) * 380;
        const dur= 650 + Math.random()*650;

        p.animate([
          { transform: `translate(0,0) rotate(0deg)`, opacity: .95 },
          { transform: `translate(${dx}px,${dy}px) rotate(${rot}deg)`, opacity: 0 }
        ], { duration: dur, easing: "cubic-bezier(.2,.8,.2,1)" });

        setTimeout(()=> p.remove(), dur + 30);
      }
    }

    // Toast
    const toast = document.getElementById("toast");
    const toastText = document.getElementById("toastText");
    let toastTimer = null;

    function pingToast(msg){
      toastText.textContent = msg;
      toast.classList.add("show");
      clearTimeout(toastTimer);
      toastTimer = setTimeout(() => toast.classList.remove("show"), 1300);
    }

    btnA.addEventListener("click", () => setMode(modeIndex + 1));
    btnB.addEventListener("click", () => {
      confettiBurst();
      pingToast("Snack delivered! +‚ô•");
    });
    btnC.addEventListener("click", () => {
      // If in HISTORY mode, move along timeline. Otherwise jump to HISTORY and next.
      if(modes[modeIndex].name !== "HISTORY"){
        setMode(0);
        return;
      }
      selectEvent((currentEventIndex + 1) % events.length);
    });

    // Keyboard shortcuts
    window.addEventListener("keydown", (e) => {
      if (e.target && ["INPUT","TEXTAREA"].includes(e.target.tagName)) return;
      if (e.key.toLowerCase() === "a") btnA.click();
      if (e.key.toLowerCase() === "b") btnB.click();
      if (e.key.toLowerCase() === "c") btnC.click();
    });

    // Initialize to first timeline entry
    selectEvent(0);
  </script>
</body>
</html>
